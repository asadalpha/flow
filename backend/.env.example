# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/flow

# Authentication
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=90d
SESSION_SECRET=your_session_secret_here

# Frontend URL (for CORS and OAuth redirects, comma-separated)
FRONTEND_URL=http://localhost:5173,https://your-frontend-domain.vercel.app

# AI Services
GEMINI_API_KEY=your_google_gemini_api_key

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
# For production, update this to: https://your-backend-domain.vercel.app/api/v1/auth/google/callback
GOOGLE_CALLBACK_URL=http://localhost:5000/api/v1/auth/google/callback
